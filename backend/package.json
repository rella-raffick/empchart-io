{
  "name": "empchartio-backend",
  "version": "1.0.0",
  "description": "EmpChartIO - Interactive Employee Organization Chart Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:create": "tsx src/scripts/createDatabase.ts",
    "db:seed": "tsx src/scripts/seedNormalized.ts",
    "db:seed:old": "tsx src/scripts/seedWithEnums.ts",
    "db:setup": "npm run db:create && npm run db:seed",
    "docker:build": "docker build -t empchartio-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env empchartio-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@supabase/supabase-js": "^2.83.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "tsx": "^4.15.7",
    "typescript": "^5.5.3"
  }
}
